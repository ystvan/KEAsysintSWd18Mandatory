@model KEAWebApp.Models.ViewModels.CreateDataViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>Manually input measurement. Date Time will be recorded automatically</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LocationIdentifier" class="control-label"></label>
                <input asp-for="LocationIdentifier" class="form-control" />
                <span asp-validation-for="Light" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Light" class="control-label"></label>
                <input asp-for="Light" class="form-control" />
                <span asp-validation-for="Light" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Temperature" class="control-label"></label>
                <input asp-for="Temperature" class="form-control" />
                <span asp-validation-for="Temperature" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
